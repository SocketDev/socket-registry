{
  "name": "@socketregistry/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for Socket.dev package variants",
  "homepage": "http://github.com/SocketDev/socket-registry-js",
  "license": "MIT",
  "repository": "github:SocketDev/socket-registry-js",
  "author": {
    "name": "Socket Inc",
    "email": "eng@socket.dev",
    "url": "https://socket.dev"
  },
  "scripts": {
    "check": "run-p -c --aggregate-output check:*",
    "check:lint": "eslint --report-unused-disable-directives .",
    "check:tsc": "tsc",
    "clean-node_modules": "del-cli \"test/**/node_modules\" \"node_modules\"",
    "knip:dependencies": "knip --dependencies",
    "knip:exports": "knip --include exports,duplicates --reporter compact",
    "lint": "oxlint -c=./.oxlintrc.json --ignore-path=./.prettierignore --tsconfig=./tsconfig.json . -D correctness -D perf -D suspicious --promise-plugin --import-plugin",
    "lint:fix": "npm run lint -- --fix && npm run lint:fix:fast",
    "lint:fix:fast": "prettier --cache --log-level warn --write .",
    "prepare": "husky && npm-recursive-install --skipRoot --skip packages scripts",
    "test": "run-s check test:*",
    "test:unit": "tap",
    "test-ci": "run-s test:*",
    "update": "run-p -c --aggregate-output update:*",
    "update:empty-files": "node ./scripts/update-empty-files.js",
    "update:license": "node ./scripts/update-license.js",
    "update:manifest": "node ./scripts/update-manifest.js",
    "update:npm:package-json": "node ./scripts/update-npm-package-json.js"
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.1",
    "@eslint/js": "^9.10.0",
    "@jdalton/patch-package": "^8.1.1",
    "@npmcli/promise-spawn": "^8.0.0",
    "@socketregistry/monorepo": "file:./",
    "@types/eslint__js": "^8.42.3",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.5.4",
    "@types/npmcli__promise-spawn": "^6.0.3",
    "@types/semver": "^7.5.8",
    "@types/validate-npm-package-name": "^4.0.2",
    "@types/yargs-parser": "^21.0.3",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "del-cli": "^5.1.0",
    "eslint": "^9.10.0",
    "fs-extra": "^11.2.0",
    "husky": "^9.1.5",
    "knip": "^5.30.0",
    "npm-recursive-install": "^1.0.8",
    "npm-run-all2": "^6.2.2",
    "oxlint": "^0.9.3",
    "packageurl-js": "^2.0.1",
    "prettier": "3.3.3",
    "semver": "^7.6.3",
    "tap": "^21.0.1",
    "tape": "^5.8.1",
    "tinyglobby": "^0.2.6",
    "typescript": "5.6.2",
    "typescript-eslint": "^8.5.0",
    "validate-npm-package-name": "^5.0.1",
    "yargs-parser": "^21.1.1"
  },
  "engines": {
    "node": "^20.9.0 || >=22.0.0"
  }
}
