{
  "name": "@socketsecurity/registry",
  "version": "2.0.0",
  "license": "MIT",
  "description": "Socket Registry - Core utilities and infrastructure for Socket.dev security tools",
  "keywords": [
    "Socket.dev",
    "security",
    "registry",
    "npm",
    "packages"
  ],
  "homepage": "https://github.com/SocketDev/socket-registry",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SocketDev/socket-registry.git",
    "directory": "registry"
  },
  "author": {
    "name": "Socket Inc",
    "email": "eng@socket.dev",
    "url": "https://socket.dev"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "default": "./dist/types.js"
    },
    "./extensions.json": "./extensions.json",
    "./manifest.json": "./manifest.json",
    "./package.json": "./package.json",
    "./tsconfig.dts.json": "./tsconfig.dts.json",
    "./tsconfig.json": "./tsconfig.json"
  },
  "files": [
    "CHANGELOG.md",
    "dist/**/*.d.ts",
    "dist/**/*.js",
    "extensions.json",
    "manifest.json"
  ],
  "engines": {
    "node": ">=18"
  },
  "sideEffects": false,
  "scripts": {
    "build": "pnpm run clean && pnpm run build:js && pnpm run build:types",
    "build:js": "node scripts/build-js.mjs",
    "build:types": "tsgo --project tsconfig.dts.json --declaration --emitDeclarationOnly",
    "build:watch": "node scripts/build-js.mjs --watch",
    "check": "tsgo --noEmit",
    "clean": "del-cli dist '**/*.tsbuildinfo'",
    "dev": "pnpm run build:watch",
    "prepublishOnly": "pnpm run build",
    "test": "vitest",
    "type-ci": "pnpm run check"
  },
  "devDependencies": {
    "@types/node": "24.6.2",
    "del-cli": "6.0.0",
    "esbuild": "0.25.10",
    "fast-glob": "3.3.3",
    "typescript": "5.7.3",
    "vitest": "3.2.4"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  }
}
